<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/trip_tile_background">

    <!-- Add ImageView for the map image -->
    <ImageView
        android:id="@+id/mapImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/map_placeholder" />

    <!-- Customize the layout to display trip details here -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/tvTripName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trip Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Add other TextViews for trip details (e.g., date, distance, duration) -->
        <!-- Example: -->
